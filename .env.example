# ==========================================
# FLASK CONFIGURATION
# ==========================================
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=change-this-in-production

# ==========================================
# DATABASE
# ==========================================
DATABASE_URI=sqlite:///ocr_compliance.db

# ==========================================
# FILE UPLOAD
# ==========================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ==========================================
# OCR ENGINE PRIORITY
# ==========================================
OCR_PRIMARY_ENGINE=ollama
OCR_FALLBACK_ENGINE=tesseract

# ==========================================
# OLLAMA CONFIGURATION (Primary Engine)
# ==========================================
OLLAMA_ENABLED=true
OLLAMA_ENDPOINT=http://127.0.0.1:11434
OLLAMA_MODEL=glm-ocr:latest
OLLAMA_TIMEOUT=120
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,tiff

# ==========================================
# TESSERACT CONFIGURATION (Fallback Engine)
# ==========================================
# Windows Example:
# TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe

# Linux/Mac Example:
# TESSERACT_CMD=/usr/bin/tesseract

# ==========================================
# OFFLINE MODE
# ==========================================
OFFLINE_MODE=false

# ==========================================
# GROQ API CONFIGURATION
# ==========================================
GROQ_API_KEY=your-groq-api-key-here

# ==========================================
# OCR.SPACE API CONFIGURATION
# ==========================================
OCRSPACE_API_KEY=your_key_here   # Get free key at https://ocr.space/ocrapi
